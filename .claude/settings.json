{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(echo:*)",
      "Bash(npm ci)",                 // lockfile に従ったクリーンインストール
      "Bash(npm run dev)",             // package.json に "dev": "expo start --tunnel" を定義
      "Bash(npm run build:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(npm ls:*)",
      "Bash(npx expo start --tunnel)", // tunnel固定
      "Bash(true)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git *:*)",
      "Bash(rm -rf:*)",                // 危険な削除コマンド
      "Bash(npm install:*)",           // lockfile更新を伴うインストール（npm ci のみ許可）
      "Bash(npx expo install:*)",      // パッケージ追加（必ず人間に確認）
      "Bash(npx expo prebuild:*)",     // ネイティブディレクトリ生成（必ず人間に確認）
      "Bash(npx expo run:*)",          // ネイティブビルド実行（必ず人間に確認）
      "Bash(eas *:*)",                 // EASコマンド全般（ビルド等、必ず人間に確認）
      "Bash(npx eas *:*)",             // EASコマンド全般（npx経由も禁止）
      "Read(.env:*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env:*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(pkill:*)"
    ]
  }
}
